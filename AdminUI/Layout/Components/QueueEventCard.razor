<MudPaper Outlined="true" Class="d-flex justify-space-between align-center pa-4">
    <div class="d-flex align-center gap-4">
        <div class="d-flex flex-column">
            <MudText Typo="Typo.h6">@Event.Name</MudText>
            <div class="d-inline-flex align-center gap-1 mt-1" style="background-color: var(--mud-palette-action-disabled-background); border-radius: 16px; padding: 4px 8px;">
                <MudIcon Icon="@Icons.Material.Filled.Event" Size="Size.Small" />
                <MudText Typo="Typo.caption">@Event.EventDateTime.ToLocalTime().ToString("g", CultureInfo.GetCultureInfo("ru-RU"))</MudText>
            </div>
        </div>
    </div>
    
    @if (IsJoined)
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => OnViewClick.InvokeAsync(Event.Id))">Просмотр</MudButton>
    }
    else
    {
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="@(() => OnJoinClick.InvokeAsync(Event.Id))">Вступить</MudButton>
    }
</MudPaper>

@code {
    [Parameter, EditorRequired] public QueueEventDto Event { get; set; }
    [Parameter] public bool IsJoined { get; set; }
    [Parameter] public EventCallback<int> OnJoinClick { get; set; }
    [Parameter] public EventCallback<int> OnViewClick { get; set; }
}