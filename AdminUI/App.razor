<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudText Typo="Typo.h5" Align="Align.Center" Class="mt-10">Доступ запрещен</MudText>
                    <MudText Align="Align.Center">Пожалуйста, <MudLink Href="/login">войдите в систему</MudLink>, чтобы увидеть эту страницу.</MudText>
                </NotAuthorized>
                <Authorizing>
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Не найдено</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Error">Извините, по этому адресу ничего нет.</MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>